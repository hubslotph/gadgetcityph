{
  "version": 2,
  "outputDirectory": "gadget-city-frontend/build",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/gadget-city-backend/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "gadget-city-backend/api/index.js": {
      "maxDuration": 30
    }
  }
}