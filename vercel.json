{
  "version": 2,
  "builds": [
    {
      "src": "gadget-city-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "gadget-city-backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "gadget-city-backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "gadget-city-frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "gadget-city-backend/api/index.js": {
      "maxDuration": 30
    }
  }
}